<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            style="@style/style_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Do You Want To Reedem?"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/reward_message_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="120 Tokens Will Be Donated To The Victims Of Flooding On Teku Area. 120 Tokens will be detectuted from your account."
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/yes_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/login_register_button"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:text="Yes"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/no_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/added_to_visit_later_btn_bg"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:text="No"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_reedem_id"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundTint="#512DA8"
        android:visibility="invisible" />
</android.support.v7.widget.CardView>